{% extends "HBHyperbricoBundle::layoutCatalogue.html.twig" %}
 
{% block titre %}
  {{ parent() }} - Recommander un{{ type == 'catalogue' ? '' : 'e' }} {{ type }}
{% endblock %}

{% block chemin %}
 {{ parent() }} <li class="active">Recommander</li>
{% endblock %}
 
{% block contenu %}

<h2>Recommander l{{ type == 'catalogue' ? 'e' : 'a' }} {{ type }} "{{ catalogue.titre }}" Ã  un(e) ami(e)</h2>

{{ form_start(form) }}
{% if form_errors(form) %}
<div class="control-group error">
  <span class="help-inline">{{ form_errors(form)|nl2br }}</span>
</div>
{% endif %}

<div class="control-group{% if form_errors(form.nom) %} error{% endif %}">
  {{ form_label(form.nom) }}
  <div class="controls">
    {{ form_widget(form.nom) }}
    {% if form_errors(form.nom) %}<span class="help-inline">{{ form_errors(form.nom) }}</span>{% endif %}
  </div>
</div>

<div class="control-group{% if form_errors(form.mail) %} error{% endif %}">
  {{ form_label(form.mail) }}
  <div class="controls">
    {{ form_widget(form.mail) }}
    {% if form_errors(form.mail) %}<span class="help-inline">{{ form_errors(form.mail) }}</span>{% endif %}
  </div>
</div>

<div class="control-group{% if form_errors(form.mailAmi) %} error{% endif %}">
  {{ form_label(form.mailAmi) }}
  <div class="controls">
    {{ form_widget(form.mailAmi) }}
    {% if form_errors(form.mailAmi) %}<span class="help-inline">{{ form_errors(form.mailAmi) }}</span>{% endif %}
  </div>
</div>

<div class="control-group{% if form_errors(form.sujet) %} error{% endif %}">
  {{ form_label(form.sujet) }}
