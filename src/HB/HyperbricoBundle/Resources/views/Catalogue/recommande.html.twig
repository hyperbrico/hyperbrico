  </div>
</div>

<div class="control-group{% if form_errors(form.recaptcha) %} error{% endif %}">
  {{ form_label(form.recaptcha) }}
  <div class="controls">
    {{ form_widget(form.recaptcha) }}
    {% if form_errors(form.recaptcha) %}<span class="help-inline">Le captcha n'est pas valide</span>{% endif %}
    <br /><br />
    <button type="submit" class="btn btn-hyperbrico">Envoyer</button>
  </div>
</div>

{{ form_end(form) }}

{% endblock %}

{% block javascripts %}
  {{ form_javascript(form) }}
{% endblock %}